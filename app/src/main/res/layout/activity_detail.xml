<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".DetailActivity">

    <data>

        <variable
            name="viewModel"
            type="com.example.bookstore.ui.detail.BookDetailViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="169dp"
            android:layout_height="250dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="Price" />

                <TextView
                    android:id="@+id/txtPriceVal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@{viewModel.bookDetail.price}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtRating"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="Rating" />

                <TextView
                    android:id="@+id/txtRatingVal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@{viewModel.bookDetail.rating}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAuth"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="Author" />

                <TextView
                    android:id="@+id/txtAuthVal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@{viewModel.bookDetail.authors}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="Title" />

                <TextView
                    android:id="@+id/txtTitleVal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@{viewModel.bookDetail.title}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPublisher"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="Publisher" />

                <TextView
                    android:id="@+id/txtPublisherVal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@{viewModel.bookDetail.publisher}" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>